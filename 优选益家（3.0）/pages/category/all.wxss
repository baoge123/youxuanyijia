/* pages/category/all.wxss */

.container scroll-view {
  height: 500px;
}

.jdheader {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 125px;
  background: #c81623;
  padding-top: 24px;
}

.jdlogo {
  width: 150px;
  height: 50px;
}

.jdsearch {
  width: 95%;
  height: 42px;
  line-height: 45px;
  border-radius: 35px;
  margin-bottom: 10px;
  background: #fff;
  font-size: 15px;
  color: #ccc;
  font-family: "微软雅黑";
  text-align: center;
}

/*nav*/

.nav {
  width: 100%;
  height: 80px;
  /*border-bottom: 1px solid red;*/
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom: 7px solid #eee;
}

.nav .navbar {
  /*border: 1px solid green;*/
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav .navbar image {
  width: 33px;
  height: 25px;
  /*margin-bottom: 14px;*/
}

.nav .navbar text {
  font-size: 14px;
  color: #000;
  margin-top: 10px;
  font-family: "微软雅黑";
}



