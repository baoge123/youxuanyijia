/* pages/worker/customer.wxss */

.serchBox {
  margin: 0 30rpx 40rpx 30rpx;
  height: 68rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 8rpx;
  border: 2rpx solid rgba(205, 210, 218, 1);
}

.serchBox .icon .iconfont {
  font-size: 32rpx;
  color: #939aa5;
  margin: 0 14rpx 0 34rpx;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_H {
  width: 25%;
  display: inline-block;
  text-align: center;
}

.yt_types {
  text-align: center;
  padding: 20rpx 20rpx 0 20rpx;
  background-color: #fff;
  /* border-top: 16rpx solid #f7f7f9; */
}

.shadow {
  box-shadow: 0 0 30rpx #e9eaec;
  height: 6rpx;
  background: #e9eaec;
  margin: 0 0 20rpx 0;
}

.yt_types .nearby {
  width: 48rpx;
  height: 4rpx;
  background: #323c58;
  border-radius: 4rpx 4rpx 0rpx 0rpx;
  margin: 0 auto;
  /* padding-top: 14rpx; */
  margin-top: 14rpx;
}

.yt_types .name {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(171, 178, 188, 1);
  /* line-height: 42px; */
}

.yt_types .named {
  font-size: 30rpx;
  /* padding-bottom: 10rpx; */
  color: #323c58;
  font-weight: 600;
}

.yt_types .noNearby {
  padding-top: 10rpx;
  /* border-bottom: 6rpx solid #fff; */
  background: #fff;
}

.yt_body {
  padding: 0 0 110rpx 48rpx;
  margin-top: 20rpx;
}

.list {
  padding: 32rpx 30rpx;
}

.list .head image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.list .sname {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.list .yxsh image {
  width: 90rpx;
  height: 32rpx;
  margin: 0 0 0 20rpx;
}

.list .jjdq {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(237, 33, 6, 1);
  line-height: 36rpx;
  width:90rpx;
text-align:center;
}

.list .lxr {
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
  padding-top: 16rpx;
  font-size: 30rpx;
}
