/* pages/order/commentLi.wxss */

.allBox {
  padding: 40rpx 0 24rpx 32rpx;
  color: #333;
}

.list {
  padding: 30rpx 0 0 32rpx;
  border-bottom: 16rpx solid #f8f9f9;
}

.list .uinfo {
  padding: 0 32rpx 20rpx 0;
}

.list .userHead {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.list .nameBox .name {
  font-size: 28rpx;
  color: #666;
}

.list .nameBox .time {
  font-size: 22rpx;
  color: #999;
}

.list .con {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  padding-right: 32rpx;
}

.list .imgBox {
  overflow: auto;
  padding: 16rpx 16rpx 16rpx 0;
}

.list .imgBox .imgli {
  float: left;
  width: 33.33%;
}

.list .imgBox .imgli .item {
  padding: 0 16rpx 8rpx 0;
}

.list .imgBox .imgli .item image {
  width: 100%;
  height: 218rpx;
}

.list .hfBox {
  padding: 40rpx 0 30rpx 68rpx;
}

.list .hfBox .hf {
  text-align: right;
  padding: 32rpx 24rpx 0 0;
}

.list .hfBox .hf .ipt {
  /* padding: 0 24rpx 0 30rpx; */
  width: 112rpx;
  min-height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(229, 231, 235, 1);
  font-size: 28rpx;
  color: #333;
}

.star {
  color: #63c39b;
}

.star .iconfont {
  font-size: 34rpx;
}

.star .icon-select {
  color: #fd9c33;
}

.star .icon-no {
  color: #fd9c33;
}
