page{
  background: #f5f5f5;
}
.yt_body{
  padding:0 0 100rpx 0;
}
.sendSure{
  position: fixed;
  bottom:0;
  width: 100%;
  z-index:2;
}

.sendSure .s1{
  text-align: center;
  color: #fff;
  background:rgba(50,60,88,1);
  width:100%;
  line-height:96rpx;
  height:96rpx;
}


.yt_body .content{
  padding: 38rpx 30rpx 48rpx 30rpx;
  margin:  0 0 20rpx 0;
  background: #fff;
}
.yt_body .li{
  padding-top: 90rpx;
}
.yt_body .li .send {
  margin: 5%;
  color: #fff;
  background-color: #fe7143;
  border-radius: 5px;
  line-height: 2.55555556;
  font-size: 30rpx;
